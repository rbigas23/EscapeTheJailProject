<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/view_style"
    android:background="@color/color_secondary"
    tools:context=".core_activity">

    <TextView
        style="@style/title_text"

        android:id="@+id/login_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/social"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_title">

        <ImageButton
            android:id="@+id/social_add_friends"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_button_big"
            android:src="@mipmap/round_person_add_black_24dp" />

        <ImageButton
            android:id="@+id/social_check_friends"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button_small"
            android:src="@mipmap/round_supervisor_account_black_24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>