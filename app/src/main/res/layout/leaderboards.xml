<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/view_style"
    tools:context=".MainActivity">

    <TextView
        style="@style/title_text"
        android:id="@+id/leaderboards_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/leaderboards"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/return_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/manrope_extra_bold"
        android:text="@string/back"
        android:textColor="@color/color_secondary"
        android:textSize="@dimen/manrope_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboards_title"
        app:layout_constraintVertical_bias="0.841" />

    <LinearLayout
        android:id="@+id/first_on_leaderboard"
        android:layout_width="316dp"
        android:layout_height="79dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="224dp">

        <ImageButton
            android:id="@+id/first_on_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_big" />

        <TextView
            android:id="@+id/first_name"
            style="@style/inner_text"
            android:layout_width="102dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:padding="14dp"
            android:text="RBO" />

        <TextView
            android:id="@+id/first_score"
            style="@style/inner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:padding="14dp"
            android:text="17538" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_on_leaderboard"
        android:layout_width="315dp"
        android:layout_height="79dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_on_leaderboard">

        <ImageButton
            android:id="@+id/second_on_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_big" />

        <TextView
            android:id="@+id/second_name"
            style="@style/inner_text"
            android:layout_width="102dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:padding="14dp"
            android:text="JFZ" />

        <TextView
            android:id="@+id/second_score"
            style="@style/inner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:padding="14dp"
            android:text="8728" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_on_leaderboard"
        android:layout_width="313dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@+id/second_on_leaderboard">

        <ImageButton
            android:id="@+id/third_on_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/round_button_big" />

        <TextView
            android:id="@+id/third_name"
            style="@style/inner_text"
            android:layout_width="102dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:padding="14dp"
            android:text="TSE" />

        <TextView
            android:id="@+id/third_score"
            style="@style/inner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:padding="14dp"
            android:text="7999" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>